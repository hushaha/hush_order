.main-image {
  width: 100%;
  height: 60vh;
  position: relative;
}

.main-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.5), transparent);
}

.button-container {
  display: flex;
  justify-content: space-around;
  padding: 40rpx;
}

.button {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ccc;
}
