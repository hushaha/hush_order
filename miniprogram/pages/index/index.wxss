.swiper-main {
  width: 100%;
  height: 40vh !important;
  position: relative;
}

.card-swiper {
  height: 40vh !important;
}

.card-swiper swiper-item {
  padding-bottom: 40rpx;
}

.content-warp {
  padding: 40rpx;
  border-radius: 54rpx;
}

.button-warp {
  padding: 20rpx 40rpx;
}

.button-container {
  display: flex;
  justify-content: space-around;
  gap: 32rpx;
}

.button {
  flex: 1;
  text-align: center;
  font-size: 42rpx;
  padding: 40rpx 80rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
