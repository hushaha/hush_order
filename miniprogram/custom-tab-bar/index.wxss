.tab-bar {
  position: fixed;
  bottom: 60rpx;
  padding: 0 20rpx;
  width: 100%;
  height: 96rpx;
  margin: 0 auto;
}

.tab-bar-list {
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  height: 100%;
  padding: 0 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-text {
  font-size: 24rpx;
  color: #8e8e93;
}

.tab-item.active .tab-text {
  color: #222;
}